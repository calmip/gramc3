{% extends 'default/base.html.twig' %}

{% import "default/macros.html.twig" as gramcmacros %}

{% block myjavascripts %}

{{ parent() }}

<script   src="{{ asset('js/compteur_caracteres.js') }}" ></script>

{% endblock myjavascripts %}

{% block body %}

{{ gramcmacros.menu(menu) }}

<section>

    <h1>Demande de rallonge pour le projet {{ projet }} (session {{ session }})</h1>

    <table class="table_vertical">
        <tbody>
            <tr>
                {# ce style ici est une verrue je ne sais pas pourquoi elle est nécessaire #}
                <th style="width:30em">Nombre d'heures demandées</th>
                <td>{{ rallonge.demHeures }}</td>
            </tr>
            <tr>
                <th>Nombre d'heures attribuées</th>
                <td>{{ rallonge.attrHeures }}</td>
            </tr>

            <tr>
                <th>Justification scientifique de la demande</th>
                <td>{{ rallonge.prjJustifRallonge| e | nl2br }}</td>
            </tr>

            <tr>
                <th>Commentaire du président</th>
                <td>{{ rallonge.commentaireExterne }}</td>
            </tr>
        </tbody>
    </table>

</section>

<nav>
    <ul>
        <li><div class="center"><a href="{{ path('consulter_version', { 'id': version.projet.idProjet, 'version': version.idVersion }) }}" title="Consulter le projet" class="lien_actif">Consulter {{projet}} </a></div></li>
    </ul>
</nav>

{% endblock %}
