# To get started with security, check out the documentation:
# https://symfony.com/doc/current/security.html
security:

    # https://symfony.com/doc/current/security.html#b-configuring-how-users-are-loaded
    providers:
        gramc_provider:
             id: app.gramc_user_provider
                # if you're using multiple entity managers
                # manager_name: customer
        in_memory:
            memory:
                users:
                    consoupload:
                       password: '%env(PASSWORD_CONSOUPLOAD)%'
                       roles: 'ROLE_ADMIN'
        #user_provider:
        #    id: app.user_provider
    encoders:
        Symfony\Component\Security\Core\User\User: plaintext


    firewalls:
        # disables authentication for assets and the profiler, adapt it according to your needs
        dev:
            pattern: ^/(_(profiler|wdt)|css|images|js)/
            security: false
            switch_user: true
        #activation:
        #    pattern:    ^/login/activation
        #    switch_user: true
        #    anonymous: ~
        #    provider: gramc_provider
        #secured:
        #    pattern:    ^/login/connexion.SUPPR
        #    context: global_security_context
        #    user_checker: app.user_checker
        #    switch_user: true
        #    provider: gramc_provider
        #    remote_user:
        #         provider : gramc_provider
        #    #     user:  REDIRECT_REMOTE_USER

        consoupload:
            pattern:   ^/adminux
            http_basic:
                  provider: in_memory

        main:
            pattern:    ^/
            context: global_security_context
            user_checker: app.user_checker
            switch_user: true
            provider: gramc_provider
            #security: false
            anonymous: ~
            remote_user:
                provider: gramc_provider
                #user: REMOTE_USER
            #logout:
            #    path:   /deconnexion
            #    target: /deconnected

        # activate different ways to authenticate
        ############ logout_on_user_change: true
        # https://symfony.com/doc/current/security.html#a-configuring-how-your-users-will-authenticate

        # http_basic: ~
        # https://symfony.com/doc/current/security/form_login_setup.html
        # form_login: ~

    access_control:
       - { path: ^/none, roles: ROLE_DEMANDEUR }


