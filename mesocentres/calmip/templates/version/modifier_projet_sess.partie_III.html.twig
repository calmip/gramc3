<div id="tab3" class="onglet"><br><br>
	<h2>Description technique du projet</h2>

	<div class="inputs">

		<div class="input">
			<label for="form_prjConception">Nature du code et informations sur le code utilisé :</label>
			<div>
				<div>
					{{ form_widget(form.prjConception) }}
					{{ form_label(form.prjDeveloppement,"Conception de méthodes de calcul parallèle") }}
				</div>
				<div>
					{{ form_widget(form.prjDeveloppement) }}
					{{ form_label(form.prjDeveloppement,"Développement d'un code parallèle") }}
				</div>
				<div>
					{{ form_widget(form.prjParallelisation) }}
					{{ form_label(form.prjParallelisation,"Parallélisation d'un code existant") }}
				</div>
				<div>
					{{ form_widget(form.prjUtilisation) }}
					{{ form_label(form.prjUtilisation,"Utilisation d'un code parallèle") }}
				</div>
			</div>
		</div>

		<div class="input">
			<label>{{ form_label(form.codeNom, "Le nom du principal logiciel que vous allez utiliser :")}}</label>
			{{ form_widget(form.codeNom) }}
		</div>

		<div class="input">
			<label>Le langage dans lequel est programmé le logiciel</label>
			<div class="inputs_checkbox">
				<div>
				{{ form_widget(form.codeC) }}
				{{ form_label(form.codeC, "C")}}
				</div>

				<div>
				{{ form_widget(form.codeCpp) }}
				{{ form_label(form.codeCpp, "C++")}}
				</div>

				<div>
				{{ form_widget(form.codeFor) }}
				{{ form_label(form.codeFor, "Fortran")}}
				</div>

				<div>
				{{ form_widget(form.codeAutre) }} 
				{{ form_label(form.codeAutre, "Autre")}}
				{{ form_widget(form.codeLangage) }} 
				</div>
			</div>
		</div>

		<div class="input">
			<label>{{ form_label(form.gpu, "Existe-t-il un binaire GPU pour votre application ?" ) }}</label>
			{{ form_widget(form.gpu) }}
		</div>

	</div>

	<div class="textarea">
		<div>
			<h4>{{ form_label(form.codeLicence, "Licence de ce logiciel (libre, commercial, autre, je ne sais pas) :" ) }}</h4>
		</div>
		{{ form_widget(form.codeLicence, { 'attr': { 'rows' : 12, 'cols' : 70 } }) }}
	</div>

	<div class="textarea">
		<div>
			<h4>Avez vous déjà utilisé ce code sur une ou plusieurs machines ?</h4>
			<ul>
				<li><strong>Machines de GENCI</strong>: précisez le nom
				<li><strong>Serveur ou cluster de labo</strong> : précisez son type (processeurs, OS)
			</ul>
		</div>
		{{ form_widget(form.codeUtilSurMach, { 'attr': { 'rows' : 12, 'cols' : 70 } }) }}
	</div>

	<div class="inputs">
		<div class="input">{# #}
			<label>{{ form_label(form.codeHeuresPJob, "Estimation du temps CPU max d'un job (heures monoprocesseur)" ) }}</label>
			{{ form_widget(form.codeHeuresPJob) }}
		</div>
		<div class="input">{# #}
			<label>{{ form_label(form.codeRamPCoeur, "Estimation de la RAM nécessaire par coeur pour un job" ) }}</label>
			{{ form_widget(form.codeRamPCoeur) }}
		</div>
		<div class="input">{# #}
			<label>{{ form_label(form.codeRamPart, "Estimation de la RAM nécessaire en mémoire partagée" ) }}</label>
			{{ form_widget(form.codeRamPart) }}
		</div>
		<div class="input">{# #}
			<label>{{ form_label(form.codeEffParal, "Nombre maximal de coeurs utilisables efficacement par le code" ) }}</label>
			{{ form_widget(form.codeEffParal) }}
		</div>
		<div class="input">
			<label>{{ form_label(form.codeVolDonnTmp, "Estimation de l'espace-disque temporaire nécessaire par job" ) }}</label>
			{{ form_widget(form.codeVolDonnTmp) }}
		</div>
	</div>

	        <tr>
	            <td class="droite">{{ form_label(form.demLogiciels, "Autres logiciels nécessaires au projet" ) }}<br></td>
	            <td class="gauche">{{ form_widget(form.demLogiciels, { 'attr': { 'rows' : 5, 'cols' : 50 } }) }}<br><br></td>
	        </tr>
	       <tr>
	            <td class="droite">{{ form_label(form.demBib, "Bibliothèques nécessaires" ) }}<br></td>
	            <td class="gauche">{{ form_widget(form.demBib, { 'attr': { 'rows' : 5, 'cols' : 50 } }) }}<br><br></td>
	        </tr>

	        <tr>
	            <td class="droite">Pensez-vous utiliser la <a href="{{ mesoc_visu }}" target="_blank">visualisation à distance</a> ?</td>
	            <td class="gauche">{{ form_widget(form.demPostTrait) }}<br><br></td>
	        </tr></tbody></table>
	    </td>
	</tr></tbody></table>

</div>
